<Window x:Class="Pathfinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pathfinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="817.4" Width="1016" ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel>
        <Canvas MouseUp="MainCanvas_MouseUp" Height="600" Width="1000" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="MainCanvas"/>
        <Button Click="Start_Click" Content="Start"></Button>
        <Button Click="Clear_Click" Content="Clear"></Button>
    </StackPanel>
</Window>
